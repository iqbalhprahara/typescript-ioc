generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_CONNECTION_URL")
}

model User {
  uuid      String   @id @default(uuid())
  gender    String   @db.VarChar(10)
  name      Json     @db.JsonB
  location  Json     @db.JsonB
  age       Int      @db.SmallInt
  createdAt DateTime @default(now()) @db.Timestamptz
  updatedAt DateTime @updatedAt @db.Timestamptz
}

model DailyRecord {
  date         DateTime @unique @db.Date
  maleCount    Int      @db.Integer
  femaleCount  Int      @db.Integer
  maleAvgAge   Int      @db.Integer
  femaleAvgAge Int      @db.Integer
  createdAt    DateTime @default(now()) @db.Timestamptz
  updatedAt    DateTime @updatedAt @db.Timestamptz
}
